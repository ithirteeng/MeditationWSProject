<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="onboarding_login_buttons_style">
        <item name="android:background">@drawable/button_onboarding_login_background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:textSize">@dimen/login_onboarding_buttons_text_size</item>
        <item name="android:padding">@dimen/login_onboarding_buttons_padding</item>
        <item name="android:layout_margin">@dimen/login_onboarding_buttons_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text_style">
        <item name="android:color">@color/login_edit_text_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/login_edit_text_color</item>
        <item name="android:textColorHint">@color/login_edit_text_color</item>
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:textSize">@dimen/login_edit_texts_size</item>
        <item name="android:paddingStart">@dimen/login_edit_texts_padding_start</item>
        <item name="android:paddingBottom">@dimen/login_edit_texts_padding_bottom</item>
    </style>
</resources>